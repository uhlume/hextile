{
    "name": "hextile",
    "version": "0.1.0",
    "description": "Hextile is a lightweight SASS module which enables extensible fluid and/or responsive hex grid layouts in pure CSS with an absolute minimum of boilerplate HTML.",
    "scripts": {
        "prepare": "husky install",
        "release" : "standard-version"
    },
    "repository": "git+https://github.com/uhlume/hextile.git",
    "keywords": [
        "eyeglass-module",
        "hexagon",
        "hex",
        "grid",
        "css",
        "sass",
        "scss"
    ],
    "author": "J Gingold <uhlume@gmail.com> (https://jgingold.com)",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/uhlume/hextile/issues"
    },
    "homepage": "https://github.com/uhlume/hextile#readme",
    "private": false,
    "main": "_index.scss",
    "style": "_index.scss",
    "devDependencies": {
        "@commitlint/cli": "^16.1.0",
        "@commitlint/config-conventional": "^16.0.0",
        "husky": "^7.0.4",
        "standard-version": "^9.3.2"
    },
    "eyeglass": {
        "name": "hextile",
        "sassDir": "sass",
        "needs": "*",
        "exports": false
      },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
